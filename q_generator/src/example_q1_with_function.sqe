title "Demo Survey"

@p "Question"
choice q1 {
Do you prefer A?
Yes >> 1
No >> 0
}

insert {
Choose an option above, then click Next to see the result calculated automatically.
}

@p "Result"
f {
  const a = window.SQE_ANSWERS || {};
  const v = a["q1"];
  if (v === 1 || v === "1") {
    return "You selected Yes — perform action X";
  } else if (v === 0 || v === "0") {
    return "You selected No — perform action Y";
  } else {
    return "No answer recorded for q1.";
  }
}